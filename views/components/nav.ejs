<div class="ui fixed borderless stackable menu">
  <div class="ui container">
    <a class="item" href="/">主页</a>
    <a class="item" href="/posts">博客</a>
    <div class="right menu">
      <div class="item">
        <form method="get" action="https://www.google.com/search" target="_blank">
          <div class="ui icon input" style="height:30px;">
            <input type="text" name="q" placeholder="Google 搜索本站">
            <i class="search icon"></i>
          </div>
          <input type="hidden" name="hl" value="zh-CN">
          <input type="hidden" name="sitesearch" value="<%= site.domain %>">
        </form>
      </div>
      <% if(!user) { %>
        <a class="item" href="/signup">注册</a>
        <a class="item" href="/signin">登录</a>
      <% } %>

      <% if(user && user.username === site.owner) { %>
        <div class="ui dropdown item">
          <div class="text"><%= user.username %></div>
          <i class="dropdown icon"></i>
          <div class="menu">
            <a class="item" href="/posts/creation">新建博客</a>
            <a class="item" href="/home/editing">编辑主页</a>
          </div>
        </div>
        <a class="item" href="/signout">登出</a>
      <% } else if(user) { %>
        <a class="item" href="/user/<%= user.uid %>"><%= user.username %></a>
        <a class="item" href="/signout">登出</a>
      <% } %>
    </div>
  </div>
</div>
